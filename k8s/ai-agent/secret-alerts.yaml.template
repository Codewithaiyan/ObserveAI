apiVersion: v1
kind: Secret
metadata:
  name: ai-agent-alerts
  namespace: observeai
type: Opaque
stringData:
  # Slack webhook URL (get from Slack: Apps -> Incoming Webhooks)
  # Example: https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXXXXXXXXXX
  slack-webhook-url: "YOUR_SLACK_WEBHOOK_URL_HERE"
  
  # Generic webhook URL (optional - for custom integrations)
  # Example: https://your-webhook.example.com/incidents
  generic-webhook-url: ""
